<h1>All Tasks</h1>

<p>Welcome to the page that will display all the tasks</p>

<%= link_to "Add a new task", new_task_path %>

<ul>
<% @tasks.each do |task| %>
<li>
<%= link_to task.title, task_path(task) %>
<%= link_to "Edit", edit_task_path(task) %>
<%= link_to "Delete", delete_task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>
</li>
<% end %>
</ul>
